{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Mines by State and Status",
        "anchor": "middle"
      },
    "data": {
        "url": "Australia Mines.csv"
      },
    "width": 350,
    "height": 250,
    "mark": "bar",
    "selection": {
        "statusGroupSelect": {
          "type": "multi",
          "fields": ["Status"], 
          "bind": "legend" 
        }},
    "encoding": {
      "x": {
        "field": "State",
        "type": "nominal",
        "title": "State",
        "axis": {"labelAngle": -45}
      },
      "y": {
        "aggregate": "count",
        "title": "Number of Mines"
      },
      "color": {
        "field": "Status",
        "type": "nominal",
        "title": "Status",
        "legend": {
            "orient": "none", 
            "titleFontSize": 12,
            "labelFontSize": 10,
            "legendX":10, "legendY":5
          },
          "scale": {"scheme": "set2"}
      },
      "opacity": {
        "condition": {
          "selection": "statusGroupSelect", 
          "value": 1
        },
        "value": 0.3  
      },
      "tooltip": [
        {"field": "State", "title": "State"},
        {"field": "Status", "title": "Status"},
        {"aggregate": "count", "title": "Total Mines"}
      ]
    },
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {"labelFontSize": 10,
        "titleFontSize": 10},
        "bar": {
        "cornerRadiusEnd": 2
      }
    }
}
  