{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 250,
  "title": {
    "text": "Number of Mines In Each Commodity",
    "anchor": "middle"
  },
  "data": {
    "url": "Australia Mines.csv"
  },
  "layer": [
    {
      "mark": "bar",
      "selection": {
        "commodityGroupSelect": {
          "type": "multi",
          "fields": ["Commodity Group"],
          "bind": "legend"
        }
      },
      "encoding": {
        "x": {
          "field": "Commodity Group",
          "type": "nominal",
          "title": "Commodity Group",
          "sort": "-y",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 9,
            "titleFontSize": 14
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Number of Mines"
        },
        "color": {
          "field": "Commodity Group",
          "type": "nominal",
          "title": "Commodity Group",
          "legend": {
            "orient": "none",
            "titleFontSize": 12,
            "labelFontSize": 10,
            "legendX": 175,
            "legendY": 5
          },
          "scale": { "scheme": "set2" }
        },
        "opacity": {
          "condition": {
            "selection": "commodityGroupSelect",
            "value": 1
          },
          "value": 0.3
        },
        "tooltip": [
          { "field": "Commodity Group", "type": "nominal", "title": "Commodity Group" },
          { "aggregate": "count", "type": "quantitative", "title": "Number of Mines" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "dx": 25,
        "dy": -100,
        "fontWeight": "lighter",
        "color": "darkred"
      },
      "encoding": {
        "text": { "value": "Nickel, Cobalt, and PGE is the biggest mine in Australia" },
        "x": { "value": 175 },
        "y": { "value": 240, "offset": -30 }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFontSize": 10,
      "titleFontSize": 10
    },
    "bar": {
      "cornerRadiusEnd": 2
    }
  }
}
